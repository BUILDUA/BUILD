{
    "env": {
        "NODE_ENV": "production"
    },
    "debug": false,
    "server": {
        "workers": 4
    },
    "logging": {
        "logDirectory": "../logs",
        "output": {
            "stdout": {
                "type": "console"
            },
            "logfile": {
                "type": "file",
                "path": "norman_{now:yyyyMMdd}_{pid}.log"
            }
        },
        "loggers": {
            "*": {
                "stdout": "debug",
                "logfile": "info"
            }
        }
    },
    "db": {
        "hosts": "localhost",
        "database": "norman",
        "options": {
            "db": {
                "safe": true
            },
            "server": {
                "poolSize": 20,
                "socketOptions": {
                    "keepAlive": 1
                }
            }
        }
    },
    "deployment": {
        "strategy": "single"
    },
    "http": {
        "port": 9000
    },
    "web": {
        "root": "../public",
        "options": {
            "etag": false,
            "maxAge": "5d"
        },
        "compression": {
            "threshold": 512
        }
    }
}
