{
    "env": {
        "NODE_ENV": "production"
    },
    "server": {
        "workers": 4
    },
    "logging": {
        "logDirectory": "logs",
        "output": {
            "logfile": {
                "type": "file",
                "path": "norman_{now:yyyyMMdd}_{pid}.log"
            }
        },
        "loggers": {
            "*": {
                "logfile": "info"
            }
        }
    },
    "db": {
        "hosts": "localhost",
        "database": "norman",
        "options": {
            "db": {
                "w": 1
            },
            "server": {
                "poolSize": 20,
                "socketOptions": {
                    "keepAlive": 1
                }
            }
        }
    },
    "deployment": {
        "strategy": "single"
    },
    "http": {
        "port": 9000,
        "proxy": {
            "host": "proxy.wdf.sap.corp",
            "port": 8080
        },
        "secureFlag" : false
    },
    "facebook": {
        "clientID": "942447102435121",
        "clientSecret": "33a4514d7c42bea5f421219f7218c727",
        "callbackURL": "/auth/facebook/callback",
        "enable" : true
    },
    "session": {
        "secret": "Dj23fVtahDYE3dfjCAHrJhzrUDosljxqVDDN9VNhRJDVf8TyD1F1nqYrjGYF",
        "tokenExpirationMinutes": 5,
        "tokenLength": 64,
        "tokenExpirationDays" : 30
    },
    "google": {
        "clientID": "328102506301-28sckgpg9joktt956jggl3c0liqub5jv.apps.googleusercontent.com",
        "clientSecret": "Oc-BSCxlhvs3ayhcrDozlAGm",
        "callbackURL": "/auth/google/callback",
        "enable" : true
    },
    "linkedin": {
        "clientID": "776t60krcb9nei",
        "clientSecret": "nlmFC80g9Pv7Rlc1",
        "callbackURL": "/auth/linkedin/callback",
        "enable" : true
    },
    "account": {
        "accountNameMinlength" : 3,
        "accountNameMaxlength" : 120,
        "forgotPasswordTokenExpiryInDays": 1,
        "autoResendEmailVerification" : true,
        "emailVerifingTokenExpiryInDays" : 30,
        "emailHasAlreadyVerified" : "The resource you are looking for is not available.",
        "recoverAccountPasswordTokenExpiredMessage" : "The resource your are looking for hasbeen expired, please try again later.",
        "recoverAccountPasswordTokenVerifiedMessage" :"Your email address has been verified."
    },
    "passport": {
        "successRedirect": "/norman",
        "successConnectRedirect": "/norman",
        "successUnlinkeRedirect": "/norman"
    },
    "audit": {
        "defaultCreatedBy" : "SYSTEM"
    },
    "services": "services.json",
    "web": {
        "root": "../public",
        "errors": {
            "root": "errors"
        },
        "indexFallback": [
            "/verifyemail",
            "/auth",
            "/auth/*",
            "/login",
            "/signup",
            "/norman",
            "/forgot-password",
            "/reset-password/*"
        ],
        "options": {
            "etag": false,
            "maxAge": "5d"
        },
        "compression": {
            "threshold": 512
        }
    },
    "security": {
        "registration": {
            "self": true,
            "social": true
        },
        "provider": {
        "local": true
        },
        "maxLoginAttempts": 5,
        "lockTimeInHours": 2,
        "crypto" :{
            "saltLenght" :128,
            "keyLenght" :128,
            "iterations" :10000,
            "emailVerifingTokenLenght": 64
        },
        "failedLoginReasons" :{
            "notFound" : "The email or password you entered is incorrect.",
            "passwordIncorrect" : "The email or password you entered is incorrect.",
            "maxAttempts" : "Your account has been temporarily locked, please try again later."
        },
        "passwordPolicy":{
            "minLength":6,
            "maxLength":13,
            "digits":{
                "allowed":true

            },
            "upperCase":{
                "allowed":true
            },
            "lowerCase":{
                "allowed":true
            },
            "specialCharacters":{
                "allowed":true
            },
            "bannedPasswords":[

            ],
            "bannedCharacterCombination":["@sap.com"]

        },
        "errorMessage":"Validation error"
    },
    "roles":{
        "userRoles": ["guest", "user", "admin"],
        "projectRoles": [
            {
                "roles": "owner-projectId",
                "allows": [
                    { "resources": "/projectId", "permissions": ["put", "post", "patch", "get", "delete"] },
                    { "resources": "/projectId/document", "permissions": ["*"] },
                    { "resources":"/api/projects/projectId", "permissions": ["put", "post", "patch", "get", "delete"] },
                    { "resources":"/api/models/projectId", "permissions": ["put", "post", "patch", "get", "delete"] },
                    { "resources": "/api/participant", "permissions": ["put", "post", "patch", "get", "delete"] },
                    { "resources": "/api/projects/projectId/document", "permissions": ["*"] }
                ]
            }, {
                "roles": "collaborator-projectId",
                "allows": [
                    { "resources": "/projectId", "permissions": ["put", "post", "patch", "get"] },
                    { "resources": "/projectId/document", "permissions": ["*"] },
                    { "resources": "/api/projects/projectId", "permissions": ["put", "post", "patch", "get"] },
                    { "resources":"/api/models/projectId", "permissions": ["put", "post", "patch", "get", "delete"] },
                    { "resources": "/api/projects/projectId/document", "permissions": ["*"] },
                    { "resources": "/api/participant", "permissions": ["put", "post", "patch", "get", "delete"] }
                ]
            }, {
                "roles": "spectator",
                "allows": [
                    { "resources": "/api/participant", "permissions": ["put", "post", "patch", "get", "delete"] },
                    { "resources": "/api/projects/", "permissions": ["post"] },
                    { "resources": "/deploy/*", "permissions":["get"]},
                    { "resources": "/public/*", "permissions":["get"]},
                    { "resources": "/openui5/*", "permissions":["get"]}
                ]
            }
        ],

        "globalRoles": [
            {
                "roles": "admin",
                "allows": [
                    { "resources": "/api", "permissions": ["*"] }
                ]
            }
        ]

    }
}
