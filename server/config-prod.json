{
    "env": {
        "NODE_ENV": "production"
    },
    "server": {
        "workers": 4
    },
    "logging": {
        "logDirectory": "logs",
        "output": {
            "logfile": {
                "type": "file",
                "path": "norman_{now:yyyyMMdd}_{pid}.log"
            }
        },
        "loggers": {
            "*": {
                "logfile": "info"
            }
        }
    },
    "db": {
        "hosts": "localhost",
        "database": "norman",
        "options": {
            "db": {
                "w": 1
            },
            "server": {
                "poolSize": 20,
                "socketOptions": {
                    "keepAlive": 1
                }
            }
        }
    },
    "deployment": {
        "strategy": "single"
    },
    "http": {
        "port": 9000,
        "proxy": {
            "host": "proxy.wdf.sap.corp",
            "port": 8080
        }
    },
    "services": "services.json",
    "web": {
        "root": "../public",
        "errors": {
            "root": "errors"
        },
        "indexFallback": [
            "/verifyemail",
            "/auth",
            "/login",
            "/signup",
            "/norman"
        ],
        "options": {
            "etag": false,
            "maxAge": "5d"
        },
        "compression": {
            "threshold": 512
        }
    }
}
