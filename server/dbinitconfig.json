{
    "env": {
        "NODE_ENV": "production"
    },
    "debug": {
        "active": true,
        "liveReload": [
            "/norman"
        ]
    },
    "server": {
    },
    "logging": {
        "logDirectory": "logs",
        "output": {
            "stdout": {
                "type": "console"
            },
            "logfile": {
                "type": "file",
                "path": "norman_{now:yyyyMMdd}.log"
            }
        },
        "loggers": {
            "*": {
                "stdout": "debug",
                "logfile": "info"
            }
        }
    },
    "db": {
        "hosts": "localhost",
        "database": "norman",
        "options": {
            "db": {
                "w": 1
            },
            "server": {
                "poolSize": 5,
                "socketOptions": {
                    "keepAlive": 1
                }
            }
        }
    },
    "deployment": {
        "strategy": "single"
    },
    "http": {
        "port": 9000,
        "proxy": {
            "host": "proxy",
            "port": 8080
        }
    },
    "services": "services.json",
    "web": {
        "root": "../dev",
        "errors": {
            "root": "errors"
        },
        "indexFallback": [
            "/verifyemail",
            "/auth",
            "/auth/*",
            "/login",
            "/signup",
            "/norman",
            "/reset-password"
        ],
        "compression": {
            "threshold": 512
        }
    }
}
